---
ecmaFeatures:
  globalReturn: true  # allow return statements in the global scope
  modules: true  # enable modules

parser: babel-eslint

env:
  browser: true
  es6: true

# 1 means warning
# 2 means error
rules:
  # possible errors
  comma-dangle: 'always-multiline'
  valid-jsdoc: 1

  # best practices
  curly: 0
  guard-for-in: 2
  default-case: 2
  no-div-regex: 2
  no-eq-null: 2
  wrap-iife: 2
  no-undef-init: 0
  no-unused-vars: 1
  no-console: 0
  no-underscore-dangle: 0
  strict: [1, never]
  no-multi-spaces: 0

  # es6
  no-var: 2

  # stylistic issues
  new-cap: 0
  indent: [1, tab]
  camelcase: 2
  comma-style: [1, last]
  comma-spacing: [2, {before: false, after: true}]
  key-spacing: [2, {beforeColon: false, afterColon: true}]
  quotes: [2, single, 'avoid-escape']
  consistent-this: [1, self]
  brace-style: [1, stroustrup]
  semi: [2, never]

  # to be removed after bugs are fixed
  no-dupe-args: 0
